<Window x:Class="SortListView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sortListView="clr-namespace:SortListView"
        Title="MainWindow"
        Width="525"
        Height="350">
  <StackPanel>
    <Button x:Name="Load"
            Click="Load_OnClick"
            Content="Load" />

    <Button x:Name="MoveUp"
            Click="MoveUp_OnClick"
            Content="Move up" />

    <Button x:Name="MoveDown"
            Click="MoveDown_OnClick"
            Content="Move Down" />

    <sortListView:MySortListView x:Name="MySortListView" />
  </StackPanel>
</Window>
